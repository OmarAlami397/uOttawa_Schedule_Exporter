{
  "manifest_version": 3,
  "name": "uO Schedule Sync",
  "version": "0.1",
  "description": "Sync your uOttawa schedule automatically.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "tabs", "webNavigation"],
  "host_permissions": ["https://*.uottawa.ca/*"],
  "content_scripts": [
    {
      "matches": ["https://*.uottawa.ca/*"],
      "all_frames": true,
      "js": ["objects/Exam.js"],
      "run_at": "document_idle"
    }
  ]
}
